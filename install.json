{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "corner": {
        "title": "Corner",
        "type": "string",
        "format": "radios",
        "enum": [
          "topLeft",
          "topRight",
          "bottomLeft",
          "bottomRight"
        ],
        "enumNames": {
          "topLeft": "Top Left",
          "topRight": "Top Right",
          "bottomLeft": "Bottom Left",
          "bottomRight": "Bottom Right"
        },
        "default": "bottomRight"
      },
      "textColor": {
        "title": "Text Color",
        "type": "string",
        "format": "color",
        "default": "#ffffff"
      },
      "backgroundColor": {
        "title": "Background Color",
        "type": "string",
        "format": "color",
        "default": "#000000"
      },
      "borderRadius": {
        "title": "Rounded Edges",
        "type": "string",
        "enum": [
          "0",
          "5",
          "10"
        ],
        "enumNames": {
          "0": "None",
          "5": "Small",
          "10": "Medium"
        },
        "format": "radios",
        "default": "5"
      },
      "fontSize": {
        "title": "Size",
        "type": "string",
        "enum": [
          "15",
          "20",
          "25"
        ],
        "enumNames": {
          "15": "Small",
          "20": "Medium",
          "25": "Large"
        },
        "format": "radios",
        "default": "20"
      },
      "seeThrough": {
        "title": "See-through",
        "type": "boolean",
        "default": true
      }
    }
  }
}
