{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "corner": {
        "title": "Corner",
        "description": "Corner (of the previously selected location) that the font resizer should appear in",
        "type": "string",
        "format": "radios",
        "enum": [
          "topLeft",
          "topRight",
          "bottomLeft",
          "bottomRight"
        ],
        "enumNames": {
          "topLeft": "Top Left",
          "topRight": "Top Right",
          "bottomLeft": "Bottom Left",
          "bottomRight": "Bottom Right"
        },
        "default": "bottomRight"
      },
      "textColor": {
        "title": "Text Color",
        "description": "Text color for the \"A\"s on the font resizer",
        "type": "string",
        "format": "color",
        "default": "#ffffff"
      },
      "backgroundColor": {
        "title": "Background Color",
        "description": "Background color for the font resizer",
        "type": "string",
        "format": "color",
        "default": "#000000"
      },
      "borderRadius": {
        "title": "Border Radius",
        "description": "Border radius (in px) of the font resizer",
        "type": "number",
        "default": 5
      },
      "fontSize": {
        "title": "Font Size",
        "type": "string",
        "enum": [
          "15",
          "20",
          "25"
        ],
        "enumNames": {
          "15": "Small",
          "20": "Medium",
          "25": "Large"
        },
        "format": "radios",
        "default": "20"
      },
      "seeThrough": {
        "title": "See-through",
        "type": "boolean",
        "default": true
      },
      "verticalMargin": {
        "title": "Vertical Spacing",
        "description": "Vertical spacing of the font resizer",
        "type": "string",
        "enum": [
          "10",
          "25",
          "50"
        ],
        "enumNames": {
          "10": "Small",
          "25": "Medium",
          "50": "Large"
        },
        "format": "radios",
        "default": "10"
      },
      "horizontalMargin": {
        "title": "Horizontal Spacing",
        "description": "Horizontal spacing of the font resizer",
        "type": "string",
        "enum": [
          "10",
          "25",
          "50"
        ],
        "enumNames": {
          "10": "Small",
          "25": "Medium",
          "50": "Large"
        },
        "format": "radios",
        "default": "10"
      }
    }
  }
}
